<h2 class="title notification is-success">註冊資料填寫</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label class="label"><%= f.label :email %></label>
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input',placeholder: "e.g. alexsmith@gmail.com" %>

    </div>
  </div>

  <div class="field">
    <label class="label"><%= f.label :password %></label>
    <div class="control">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
    </div> 
  </div>

  <div class="field">
  <label class="label"><%= f.label :password_confirmation %><label>
  <div class="control">
  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
  </div>
  </div>

  <div class="actions">
    <%= f.submit "註冊", class: 'button is-success' %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

   